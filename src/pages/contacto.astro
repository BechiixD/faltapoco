---
import Layout from "../Layouts/Layout.astro";
import ContactForm from "../components/ContactForm.tsx";
// No es necesario que este en environment variable, ya que es una key pública
const accessKey = "2c854ba8-d82d-4c65-8683-7ec9b4e6b73e";
---

<Layout title="Contactanos | Faltapoco.com">
    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto">
                <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
                    Contactanos
                </h2>
                <p class="text-center text-gray-500 mb-12">
                    ¿Tenés una sugerencia, un proyecto en mente o querés
                    colaborar? ¡Escribinos!
                </p>
                <div class="bg-white rounded-xl shadow p-8">
                    <ContactForm accessKey={accessKey} client:idle />
                </div>
            </div>
        </div>
    </section>
</Layout>
