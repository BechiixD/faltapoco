---
import Layout from "../Layouts/Layout.astro";
import { calcTimeLeft } from "../utils/calcTimeLeft";

// Fechas de Semana Santa 2026
const juevesSantoIso = "2026-04-02T00:00:00Z";
const viernesSantoIso = "2026-04-03T00:00:00Z";

const initialJueves = calcTimeLeft(juevesSantoIso);
const initialViernes = calcTimeLeft(viernesSantoIso);

// Fecha en formato legible
const juevesDate = new Date(juevesSantoIso);
const viernesDate = new Date(viernesSantoIso);

const juevesDay = juevesDate.getUTCDate();
const juevesMonth = juevesDate.toLocaleString("es-ES", { month: "long" });
const juevesYear = juevesDate.getUTCFullYear();

const viernesDay = viernesDate.getUTCDate();
const viernesMonth = viernesDate.toLocaleString("es-ES", { month: "long" });
const viernesYear = viernesDate.getUTCFullYear();

const daysLeftJueves = initialJueves.days;
const daysLeftViernes = initialViernes.days;

const pageTitle = "¿Cuánto falta para Semana Santa 2026? Jueves y Viernes Santo | Faltapoco.com";
const description =
    "Descubre exactamente cuántos días, horas y minutos faltan para Semana Santa 2026. Contador en tiempo real para Jueves Santo y Viernes Santo, y fechas exactas.";

const url = "https://faltapoco.com/semana-santa";
const image = "https://faltapoco.com/og/semana-santa.png";
---

<Layout title="Semana Santa 2026">
    <Fragment slot="head">
    <!-- Meta SEO -->
    <meta name="description" content={description} />
    <meta name="keywords" content="semana santa 2026, jueves santo, viernes santo, cuanto falta para semana santa, faltapoco, contador semana santa" />
    <link rel="canonical" href={url} />

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Schema.org (JSON-LD) -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebPage",
        name: pageTitle,
        description,
        url,
        image,
        inLanguage: "es",
        publisher: {
          "@type": "Organization",
          name: "Faltapoco",
          url: "https://faltapoco.com"
        }
      })}
    </script>
  </Fragment>
    <main
        class="flex flex-col items-center justify-center flex-grow px-4 py-8 space-y-12 text-center md:gap-16"
    >
        <div class="flex flex-col items-center w-full space-y-4">
            <h1 class="text-4xl sm:text-5xl md:text-7xl font-extrabold mb-2">
                ¿Cuánto tiempo falta para
                <span
                    class="bg-gradient-to-r from-[#0B5FFF] via-gray-400 to-[#0B5FFF] bg-clip-text text-transparent animate-gradient"
                    style="display: inline-block;"
                >
                    Semana Santa 2026
                </span>?
            </h1>
        </div>
        <style>
            @keyframes gradient-move {
                0% {
                    background-position: 0% 50%;
                }
                50% {
                    background-position: 100% 50%;
                }
                100% {
                    background-position: 0% 50%;
                }
            }
            .animate-gradient {
                background-size: 200% 200%;
                animation: gradient-move 4s ease-in-out infinite;
            }
        </style>
        <div class="max-w-5xl w-full space-y-6 text-center mx-auto">
            <div class="p-4 sm:p-8 rounded-lg shadow text-center mx-auto bg-white space-y-8">
                <div class="text-lg sm:text-xl md:text-2xl text-[#FFDD00] font-semibold">
                    Jueves Santo: {juevesDay} de {juevesMonth} de {juevesYear}.<br />
                    Viernes Santo: {viernesDay} de {viernesMonth} de {viernesYear}.
                </div>
                <div>
                    <div class="font-bold mb-2 text-[#0B5FFF]">Faltan para Jueves Santo:</div>
                    <div
                        class="mt-2 text-4xl sm:text-6xl md:text-8xl text-[#0B5FFF] font-mono"
                        data-countdown
                        data-target={juevesSantoIso}
                        aria-live="polite"
                    >
                        {initialJueves.days}d {String(initialJueves.hours).padStart(2, "0")}h {
                            String(initialJueves.minutes).padStart(2, "0")
                        }m {String(initialJueves.seconds).padStart(2, "0")}s
                    </div>
                    <div class="mt-2 text-base sm:text-lg text-gray-600">
                        Faltan {daysLeftJueves} días para Jueves Santo.
                    </div>
                </div>
                <div>
                    <div class="font-bold mb-2 text-[#0B5FFF]">Faltan para Viernes Santo:</div>
                    <div
                        class="mt-2 text-4xl sm:text-6xl md:text-8xl text-[#0B5FFF] font-mono"
                        data-countdown
                        data-target={viernesSantoIso}
                        aria-live="polite"
                    >
                        {initialViernes.days}d {String(initialViernes.hours).padStart(2, "0")}h {
                            String(initialViernes.minutes).padStart(2, "0")
                        }m {String(initialViernes.seconds).padStart(2, "0")}s
                    </div>
                    <div class="mt-2 text-base sm:text-lg text-gray-600">
                        Faltan {daysLeftViernes} días para Viernes Santo.
                    </div>
                </div>
                <div class="mt-4 text-base sm:text-lg text-gray-600">
                    Semana Santa es una de las celebraciones más importantes en el mundo cristiano.
                </div>
                <div class="mt-4 text-base sm:text-lg text-gray-600">
                    Y un lindo feriado para viajar.
                </div>
            </div>
        </div>

        <script type="module" src="/js/countdown.js"></script>
        <script type="module">
            import { initCountdown } from "/js/countdown.js";
            // inicializa todos los [data-countdown]
            initCountdown();
        </script>
    </main>
</Layout>
