---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="google-adsense-account" content="ca-pub-7540156536373518" />
        <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" sizes="any" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="robots" content="index, follow" />

        <title>{title}</title>
        <slot name="head" />
    </head>
    <body class="flex flex-col min-h-screen bg-[#F6F8FB]">
        <Header />
        <slot />
        <Footer />
        <Analytics />
    </body>
    <script
        async
        src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7540156536373518"
        crossorigin="anonymous"></script>
</html>
