---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="es">
    <head>
        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-R0LT5CM7B6"
        ></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-R0LT5CM7B6");
        </script>

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="google-adsense-account" content="ca-pub-7540156536373518" />
        <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" sizes="any" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="robots" content="index, follow" />

        <title>{title}</title>
        <slot name="head" />
    </head>
    <body class="flex flex-col min-h-screen bg-[#F6F8FB]">
        <Header />
        <slot />

        <!-- <div class="ad-bottom">
            <div id="container-9024bc1159542df7538b15ed31484c6d"></div>
        </div> -->

        <Footer />
        <Analytics />
    </body>
    <!-- Defer ad scripts to load after page render -->
    <!-- <script
        defer
        data-cfasync="false"
