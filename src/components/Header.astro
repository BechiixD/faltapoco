<header
    class="text-center p-4 text-[#0B5FFF] flex flex-col md:flex-row md:justify-between items-center mt-2 mb-4 mx-4 relative"
>
    <a
        href="/"
        class="cursor-pointer text-2xl font-bold hover:text-[#FFD43B] transition duration-200 ease-in-out"
    >
        Falta Poco
    </a>

    <!-- Botón hamburguesa -->
    <button
        id="menu-btn"
        class="md:hidden absolute right-4 top-4 text-3xl focus:outline-none"
        aria-label="Abrir menú"
    >
        ☰
    </button>

    <nav
        id="menu"
        class="space-x-0 md:space-x-4 mt-2 flex flex-col md:mt-0 md:flex-row md:items-center transition-all duration-300
           hidden md:block bg-white md:bg-transparent absolute md:static top-16 left-0 w-full md:w-auto shadow md:shadow-none z-10"
    >
        <a
            href="/mundial"
            class="cursor-pointer text-xl hover:text-[#FFD43B] py-2 md:py-0"
            >Mundial 2026</a
        >
        <a
            href="/año-nuevo"
            class="cursor-pointer text-xl hover:text-[#FFD43B] py-2 md:py-0"
            >Año nuevo</a
        >
        <a
            href="/sobre-nosotros"
            class="cursor-pointer text-xl hover:text-[#FFD43B] py-2 md:py-0"
            >Sobre nosotros</a
        >
        <a
            href="/contacto"
            class="cursor-pointer text-xl hover:text-[#FFD43B] py-2 md:py-0"
            >Contacto</a
        >
        <a
            href="/"
            class="cursor-pointer text-xl hover:text-[#FFD43B] py-2 md:py-0"
            >Ver Todos</a
        >
    </nav>
</header>

<script>
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");

    btn.addEventListener("click", () => {
        const isOpen = menu.classList.toggle("hidden");
        btn.textContent = isOpen ? "☰" : "X";
    });
</script>
